<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >



    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/group_chat_message_layout_left"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/default_user_men_icon"
            android:id="@+id/group_chat_left_image"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#9FA8DA"
            android:layout_weight="1"

  >
            <com.vanniktech.emoji.EmojiTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is ramu"
                android:textColor="#fff"
                android:id="@+id/group_chat_message_left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_chat_send_time_left"
                android:text="2017-11-11"
                android:textSize="10sp"
                android:textColor="#fff"/>
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        android:layout_gravity="right"
        android:id="@+id/group_chat_message_layout_right"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#FF7043"
            android:layout_weight="1"
>
            <com.vanniktech.emoji.EmojiTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textColor="#fff"
                android:textSize="16sp"
                android:id="@+id/group_chat_message_right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_chat_send_time_right"
                android:textColor="#fff"
                android:text="2017-11-11"
                android:textSize="10sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/group_chat_right_image"
            android:src="@drawable/default_user_men_icon"
            android:layout_gravity="center_vertical"
            />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
